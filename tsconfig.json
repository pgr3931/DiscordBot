{
  "compilerOptions": {
    "target": "ES2021" ,
    "module": "commonjs" ,
    "outDir": "./build" ,
    "rootDir": "./src" ,
    "strict": true ,
    "esModuleInterop": true ,  
    "experimentalDecorators": true ,
    "emitDecoratorMetadata": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  }
}
